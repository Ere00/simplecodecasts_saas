
<div class="row">
  
  <div class="col-md-6 col-md-offset-3 text-center">
    <% if params[:plan] == '2' %>
     <h2>Pro Account</h2>
     <p>Sign Up for the pro account $10/month and get access to the community and contact information.</p>
    <% else %>
      <h2 class="text-center">Basic Account</h2>
      <p>Sign Up for free and get basic access to the community.</p>
    <% end %>
  </div>
 
  
  <div class="col-md-4 col-md-offset-4">
    <div class="well">
    <h2>Sign up</h2>
       <%= render "basic_form" %>
    </div>
  </div>
</div>
